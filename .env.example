# .env.example
# Skopiuj ten plik do .env i dostosuj wartości do swoich potrzeb

# =============================================================================
# API Configuration
# =============================================================================
# URL do API Sejmu (zwykle nie trzeba zmieniać)
API_BASE_URL=https://api.sejm.gov.pl

# Domyślna kadencja do pobierania
DEFAULT_TERM=10

# =============================================================================
# Ścieżki plików
# =============================================================================
# Katalog gdzie zapisywać pobrane stenogramy
BASE_OUTPUT_DIR=stenogramy_sejm

# Katalog na pliki logów
LOGS_DIR=logs

# =============================================================================
# Ustawienia zapytań HTTP
# =============================================================================
# Timeout dla zapytań (sekundy)
REQUEST_TIMEOUT=30

# Opóźnienie między zapytaniami (sekundy) - bądź grzeczny dla API!
REQUEST_DELAY=1.0

# Maksymalna liczba powtórzeń przy błędach
MAX_RETRIES=3

# Podstawowe opóźnienie dla retry (sekundy)
RETRY_BASE_DELAY=5.0

# User Agent dla zapytań
USER_AGENT=SejmBotScraper/1.0 (Educational Purpose)

# =============================================================================
# Logowanie
# =============================================================================
# Poziom logowania (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Format logów
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Czy zapisywać logi do pliku
LOG_TO_FILE=true

# Maksymalny rozmiar pliku logu (MB)
LOG_FILE_MAX_SIZE_MB=50

# Liczba kopii zapasowych logów
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# Scheduler - automatyczne pobieranie
# =============================================================================
# Jak często sprawdzać nowe transkrypty (minuty)
SCHEDULER_INTERVAL=30

# Jak stare posiedzenia sprawdzać (dni)
MAX_PROCEEDING_AGE=7

# Czy włączyć powiadomienia
ENABLE_NOTIFICATIONS=false

# URL webhooka do powiadomień (Slack, Discord, Teams, etc.)
# NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# NOTIFICATION_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Powiadomienia przy błędach
NOTIFICATION_ON_ERRORS=true

# Powiadomienie przy starcie schedulera
NOTIFICATION_ON_STARTUP=false

# =============================================================================
# Przykłady konfiguracji dla różnych środowisk
# =============================================================================

# --- DEVELOPMENT ---
# LOG_LEVEL=DEBUG
# SCHEDULER_INTERVAL=5
# ENABLE_NOTIFICATIONS=false
# REQUEST_DELAY=0.5

# --- PRODUCTION ---
# LOG_LEVEL=INFO
# SCHEDULER_INTERVAL=30
# ENABLE_NOTIFICATIONS=true
# ENABLE_HEALTH_SERVER=true
# NOTIFICATION_WEBHOOK=https://your-webhook-url.com
# REQUEST_DELAY=1.0

# --- TESTING ---
# LOG_LEVEL=WARNING
# SCHEDULER_INTERVAL=60
# MAX_PROCEEDING_AGE=3
# ENABLE_NOTIFICATIONS=false