# .env - Konfiguracja SejmBot Scraper v2.0
# Skopiuj do .env i dostosuj wartości do swoich potrzeb

# === API SETTINGS ===
API_BASE_URL=https://api.sejm.gov.pl
DEFAULT_TERM=10

# === DIRECTORIES ===
BASE_OUTPUT_DIR=data_sejm
LOGS_DIR=logs

# === REQUEST SETTINGS ===
REQUEST_TIMEOUT=30
REQUEST_DELAY=1.0
MAX_RETRIES=3
RETRY_BASE_DELAY=5.0
USER_AGENT=SejmBotScraper/1.0 (Educational Purpose)

# === TRANSCRIPT PROCESSING ===
FETCH_FULL_TEXT=false
SKIP_EXISTING_STATEMENTS=true
STATEMENT_BATCH_SIZE=100
MAX_STATEMENT_LENGTH=50000
SAVE_RAW_HTML=false

# === MP DATA PROCESSING ===
DOWNLOAD_MP_PHOTOS=true
DOWNLOAD_MP_VOTING_STATS=true
MP_PHOTO_MAX_SIZE_MB=5
SKIP_EXISTING_PHOTOS=true

# === ENRICHMENT SETTINGS ===
ENABLE_ENRICHMENT=true
CREATE_FINAL_DATASETS=true
INCLUDE_MP_PHOTOS_FINAL=false
FINAL_JSON_INDENT=2
COMPRESS_FINAL_JSON=false

# === LOGGING ===
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_MAX_SIZE_MB=50
LOG_FILE_BACKUP_COUNT=5

# === SCHEDULER (for automated runs) ===
SCHEDULER_INTERVAL=30
MAX_PROCEEDING_AGE=7
ENABLE_HEALTH_SERVER=false
HEALTH_SERVER_PORT=8080
ENABLE_NOTIFICATIONS=false
NOTIFICATION_ON_ERRORS=true
NOTIFICATION_ON_STARTUP=false
AUTO_ENRICH_NEW_DATA=true
# NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# === DATA VALIDATION ===
VALIDATE_JSON_STRUCTURE=true
CHECK_DATA_COMPLETENESS=true
MIN_STATEMENTS_PER_PROCEEDING=10
MAX_ERRORS_BEFORE_ABORT=50

# === PERFORMANCE ===
CONCURRENT_DOWNLOADS=3
MEMORY_LIMIT_MB=1024
CLEANUP_TEMP_FILES=true
COMPRESS_OLD_LOGS=true

# === PRZYKŁADY KONFIGURACJI DLA RÓŻNYCH SCENARIUSZY ===

# Szybkie pobieranie (bez zdjęć i statystyk):
# DOWNLOAD_MP_PHOTOS=false
# DOWNLOAD_MP_VOTING_STATS=false
# FETCH_FULL_TEXT=false
# CONCURRENT_DOWNLOADS=5

# Pełne pobieranie (wszystko):
# DOWNLOAD_MP_PHOTOS=true
# DOWNLOAD_MP_VOTING_STATS=true
# FETCH_FULL_TEXT=true
# SAVE_RAW_HTML=true
# INCLUDE_MP_PHOTOS_FINAL=true

# Tryb produkcyjny (z powiadomieniami):
# LOG_LEVEL=WARNING
# ENABLE_NOTIFICATIONS=true
# ENABLE_HEALTH_SERVER=true
# COMPRESS_FINAL_JSON=true
# NOTIFICATION_WEBHOOK=https://your-webhook-url

# Tryb developerski (verbose):
# LOG_LEVEL=DEBUG
# VALIDATE_JSON_STRUCTURE=true
# CHECK_DATA_COMPLETENESS=true
# CLEANUP_TEMP_FILES=false